{
  "name": "@react-typescript/scripts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Node runnable TypeScript scripts for the monorepo",
  "bin": {
    "ts-script": "./dist/cli.mjs"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsup src/index.ts src/cli.ts --format esm --out-dir dist --dts",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "cd ../.. && pnpm eslint packages/scripts/src",
    "lint:fix": "cd ../.. && pnpm eslint packages/scripts/src --fix"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "rimraf": "6.0.1",
    "tsup": "8.3.5",
    "tslib": "2.8.1",
    "tsx": "4.19.2",
    "typescript": "5.9.2"
  }
}


